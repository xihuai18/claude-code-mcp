{
  "name": "@leo000001/claude-code-mcp",
  "version": "1.7.0",
  "description": "MCP server that runs Claude Code as tools â€” start coding agents, poll their progress, and control permissions from any MCP client",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "claude-code-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build",
    "lint": "eslint src/ tests/",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "keywords": [
    "mcp",
    "mcp-server",
    "claude-code",
    "claude",
    "claude-agent-sdk",
    "anthropic",
    "agent",
    "coding-agent",
    "model-context-protocol",
    "ai"
  ],
  "author": "xihuai18",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xihuai18/claude-code-mcp.git"
  },
  "homepage": "https://github.com/xihuai18/claude-code-mcp#readme",
  "bugs": {
    "url": "https://github.com/xihuai18/claude-code-mcp/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "LICENSE",
    "CODE_OF_CONDUCT.md",
    "CONTRIBUTING.md",
    "README.md",
    "SECURITY.md",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.38",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.2.3",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
